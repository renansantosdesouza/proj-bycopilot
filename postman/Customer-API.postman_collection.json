              "path": ["lessons", "progress"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"studentId\": 1,\n    \"lessonId\": 1,\n    \"completed\": true,\n    \"notes\": \"Great lesson!\"\n}"
            }
          }
        },
        {
          "name": "Get Student Course Progress",
          "request": {
