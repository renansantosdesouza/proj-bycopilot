    {
      "name": "Modules",
      "item": [
        {
          "name": "Create Module",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/modules",
              "host": ["{{baseUrl}}"],
              "path": ["modules"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Introduction to Java\",\n    \"description\": \"Basic Java concepts\",\n    \"orderNumber\": 1,\n    \"courseId\": 1,\n    \"lessons\": []\n}"
            }
          }
        },
        {
          "name": "Get Course Modules",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/modules/course/1",
              "host": ["{{baseUrl}}"],
              "path": ["modules", "course", "1"]
            }
          }
        },
        {
          "name": "Update Module",
          "request": {
            "method": "PUT",
            "header": [
              {
